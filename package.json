{
  "name": "banorte-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:landing": "turbo run dev --filter=landing",
    "build:landing": "turbo run build --filter=landing",
    "dev:documind": "turbo run dev --filter=documind",
    "build:documind": "turbo run build --filter=documind",
    "dev:sentiment": "turbo run dev --filter=sentiment-analysis",
    "build:sentiment": "turbo run build --filter=sentiment-analysis",
    "dev:financial": "turbo run dev --filter=banorte-financial-app",
    "build:financial": "turbo run build --filter=banorte-financial-app",
    "dev:sdk-control": "turbo run dev --filter=sdk-version-control",
    "build:sdk-control": "turbo run build --filter=sdk-version-control",
    "clean": "turbo run clean && rm -rf node_modules .turbo"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.22.0"
}
