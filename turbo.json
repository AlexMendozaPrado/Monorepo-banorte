{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_VERCEL_URL"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "OPENAI_API_KEY",
    "SUPABASE_URL",
    "SUPABASE_ANON_KEY",
    "DEFAULT_MODEL",
    "MAX_TOKENS",
    "TEMPERATURE",
    "MAX_FILE_SIZE",
    "ALLOWED_FILE_TYPES",
    "AI_PROVIDER",
    "OLLAMA_BASE_URL",
    "OLLAMA_MODEL"
  ],
  "globalDependencies": [
    "**/.env.*local"
  ]
}
